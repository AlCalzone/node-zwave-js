	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Attach (RasPi)",
			"address": "heizung.fritz.box",
			"port": 9229,
			"localRoot": "${workspaceFolder}",
			"remoteRoot": "/opt/iobroker/node_modules/zwave-js",
			"skipFiles": [
				"<node_internals>/**"
			]
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach (localhost)",
			"port": 9229,
			"skipFiles": [
				"<node_internals>/**",
				"**/typescript.js"
			],
			"sourceMaps": true
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug locally",
			"port": 9229,
			"runtimeArgs": [
				"--async-stack-traces",
				"--inspect-brk=9229",
				"-r",
				"ts-node/register/transpile-only.js",
				"-r",
				"tsconfig-paths/register",
				"${workspaceFolder}/test/run.ts"
			],
			"env": {
				"NO_CACHE": "true",
				// "LOGLEVEL": "verbose"
			},
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			],
			"sourceMaps": true
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Decode message",
			"port": 9229,
			"runtimeArgs": [
				"--async-stack-traces",
				"--inspect-brk=9229",
				"${workspaceFolder}/test/debug.js"
			],
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			],
			"sourceMaps": true
		}
	]
}
