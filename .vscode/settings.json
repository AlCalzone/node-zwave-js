{
	"typescript.tsdk": "node_modules\\typescript\\lib",
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"jest.showCoverageOnLoad": true,
	"jest.enableCodeLens": true,
	"jest.pathToJest": "npm run test:ts --",
	"eslint.enable": true,
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"[typescript]": {
		"editor.codeActionsOnSave": {
			"source.organizeImports": true
		}
	},
	"files.exclude": {
		"node_modules/": false,
		"coverage/": false,
		".*": false,
		"**/node_modules/": false,
		"**/*.test.js": false,
		".nyc_output": false,
		"**/coverage/": false,
		"**/*.map": false,
		"**/zwave-js-*.tgz": false,
		"cache": false,
		"build": false,
		"*.d.ts": false,
		"*.map": false,
		"CommandClass.js": false,
		"Controller.js": false,
		"Driver.js": false,
		"Error.js": false,
		"Node.js": false,
		"Values.js": false,
		"index.js": false,
		"packages/core/Capabilities.js": false,
		"packages/core/Consts.js": false,
		"packages/core/Error.js": false,
		"packages/core/Log.js": false,
		"packages/core/Security.js": false,
		"packages/core/Test.js": false,
		"packages/core/Util.js": false,
		"packages/core/Values.js": false,
		"packages/core/index.js": false,
		"**/build": false,
		"**/*.tsbuildinfo": false,
		"Utils.js": false,
		"packages/core/Capabilities.d.ts": false,
		"packages/core/Consts.d.ts": false,
		"packages/core/Error.d.ts": false,
		"packages/core/Log.d.ts": false,
		"packages/core/Security.d.ts": false,
		"packages/core/Test.d.ts": false,
		"packages/core/Util.d.ts": false,
		"packages/core/Values.d.ts": false,
		"packages/core/index.d.ts": false,
		"packages/zwave-js/CommandClass.d.ts": false,
		"packages/zwave-js/CommandClass.js": false,
		"packages/zwave-js/Controller.d.ts": false,
		"packages/zwave-js/Controller.js": false,
		"packages/zwave-js/Driver.d.ts": false,
		"packages/zwave-js/Driver.js": false,
		"packages/zwave-js/Error.d.ts": false,
		"packages/zwave-js/Error.js": false,
		"packages/zwave-js/Node.d.ts": false,
		"packages/zwave-js/Node.js": false,
		"packages/zwave-js/Utils.d.ts": false,
		"packages/zwave-js/Utils.js": false,
		"packages/zwave-js/Values.d.ts": false,
		"packages/zwave-js/Values.js": false,
		"packages/zwave-js/index.d.ts": false,
		"packages/zwave-js/index.js": false
	},
	"files.associations": {
		"**/config/**/*.json": "jsonc"
	},
	"editor.rulers": [72, 80, 120]
}
