{
	"packages": ["packages/*"],
	"useWorkspaces": true,
	"npmClient": "yarn",
	"version": "6.4.0",
	"command": {
		"run": {
			"stream": true,
			"maxBuffer": 1000000000
		},
		"version": {
			"allowBranch": ["master", "release-*"],
			"ignoreChanges": ["*.md"],
			"amend": true,
			"push": false
		}
	}
}
